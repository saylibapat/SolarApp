<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/offwhite">


<RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            >

    <TextView
        android:id="@+id/rUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentTop="true"

        android:layout_marginTop="17dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Username"
        android:textColor="#3F51B5"
        android:textSize="18sp" />

                <TextView
                    android:id="@+id/tvUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"


                    android:layout_alignTop="@id/rUser"

                    android:layout_toRightOf="@id/rUser"
                    android:layout_marginRight="30dp"
                    android:layout_weight="0.00"
                    android:textColor="#3F51B5"
                    android:textSize="18sp"
                    />

                <TextView
                    android:id="@+id/rModelNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="Model Number"
                    android:layout_below="@+id/tvUser"
                    android:layout_marginTop="30dp"
                    android:textColor="#3F51B5"
                    android:textSize="18sp"
                    />

                <TextView
                    android:id="@+id/tvModelNo"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/rModelNo"
                    android:layout_marginRight="30dp"
                    android:layout_alignTop="@id/rModelNo"
                    android:textColor="#3F51B5"
                    android:textSize="18sp"
                    />

                <TextView
                    android:id="@+id/rModelName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#3F51B5"
                    android:layout_below="@id/tvModelNo"
                    android:layout_marginTop="30dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textSize="18sp"
                    android:text="Model Name" />

                <TextView
                    android:id="@+id/tvModelName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/rModelName"
                    android:layout_marginRight="30dp"
                    android:layout_alignTop="@id/rModelName"
                    android:textColor="#3F51B5"
                    android:textSize="18sp"
                    />

                <TextView
                    android:id="@+id/rManu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvModelName"
                    android:layout_marginTop="30dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="Manfacturer"
                    android:textSize="18sp"
                    android:textColor="#3F51B5"
                    />

                <TextView
                    android:id="@+id/tvManu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/rManu"
                    android:layout_toRightOf="@id/rManu"
                    android:layout_marginRight="30dp"
                    android:textSize="18sp"
                    android:textColor="#3F51B5"
                    />

                <TextView
                    android:id="@+id/rbarcode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvManu"
                    android:layout_marginTop="30dp"
                    android:textSize="18sp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="Barcode"
                    android:textColor="#3F51B5"
                    />

                <TextView
                    android:id="@+id/tvBarcode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/rbarcode"
                    android:textSize="18sp"
                    android:layout_toRightOf="@id/rbarcode"
                    android:layout_marginRight="30dp"
                    android:textColor="#3F51B5"
                    android:layout_weight="0.01" />

                <TextView
                    android:id="@+id/rDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#3F51B5"
                    android:layout_below="@id/tvBarcode"
                    android:layout_marginTop="30dp"
                    android:textSize="18sp"
                    android:layout_weight="0.05"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="Date" />

                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/rDate"
                    android:layout_toRightOf="@id/rDate"
                    android:textSize="18sp"
                    android:layout_marginRight="30dp"
                    android:textColor="#3F51B5"
                    />


                <TextView
                    android:id="@+id/rLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvDate"
                    android:textSize="18sp"
                    android:layout_marginTop="30dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="Location"
                    android:textColor="#3F51B5"
                    />

                <TextView
                    android:id="@+id/tvAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:layout_alignTop="@id/rLocation"
                    android:layout_toRightOf="@id/rLocation"
                    android:layout_marginRight="30dp"
                    android:ems="10"
                    android:inputType="textMultiLine"
                    android:textColor="#3F51B5" />

                <TextView
                    android:id="@+id/rImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvAddress"
                    android:layout_marginTop="30dp"
                    android:ems="10"
                    android:text="Image"
                    android:inputType="textPersonName"
                    android:textColor="#3F51B5"
                    android:textSize="18sp"
                    />

                <ImageView
                    android:id="@+id/iv"
                    android:layout_width="150dp"
                    android:layout_height="90dp"
                    android:layout_alignTop="@id/rImage"
                    android:layout_toRightOf="@id/rImage"
                    android:ems="10"
                    android:layout_marginBottom="8dp"
                    />

                <Button
                    android:id="@+id/Bsubmit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:onClick="onSubmitClick"
                    android:text="Submit"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:layout_below="@+id/iv"
                    android:layout_toStartOf="@+id/iv"
                    android:layout_marginRight="70dp"
                    android:layout_alignParentRight="true"
                    android:fontFamily="garamond"
                    android:background="@color/lightblue"
                    android:textColor="@color/offwhite"
                    android:layout_marginBottom="30dp" />
                    <!--tools:ignore="HardcodedText"-->

                <Button
                    android:id="@+id/Bhome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/Bsubmit"
                    android:layout_toRightOf="@id/Bsubmit"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="70dp"
                    android:onClick="onHomeScreenClick"
                    android:text="Home"
                    android:fontFamily="garamond"
                    android:background="@color/lightblue"
                    android:textColor="@color/offwhite"
    android:layout_marginBottom="30dp" />


        </RelativeLayout>

</ScrollView>





